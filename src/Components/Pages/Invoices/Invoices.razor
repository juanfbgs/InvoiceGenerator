@page "/Invoices"
@inject IJSRuntime JS

@rendermode InteractiveServer

<PageTitle>Invoices</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">My Invoices</h2>
        <a href="/Invoices/Create" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> New Invoice
        </a>
    </div>

    @if (invoices == null)
    {
        <div class="text-center">
            <div class="spinner-border text-primary" role="status"></div>
            <p>Loading your invoices...</p>
        </div>
    }
    else if (!invoices.Any())
    {
        <div class="alert alert-info">
            You haven't created any invoices yet. Click "New Invoice" to get started!
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-4">
            @foreach (var invoice in invoices)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center pt-3">
                            <span class="badge bg-info"># @invoice.InvoiceNumber</span>
                            <small class="text-muted">@invoice.CreatedAt.ToShortDateString()</small>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title fw-bold text-primary mb-1">@invoice.PartnerName</h5>
                            <p class="card-text text-muted small mb-3">
                                <i class="bi bi-geo-alt"></i> @(invoice.PartnerLocation ?? "No location provided")
                            </p>

                            <div class="bg-light p-2 rounded mb-3">
                                <div class="d-flex justify-content-between small">
                                    <span>Hours:</span>
                                    <span class="fw-bold">@invoice.ServiceHours</span>
                                </div>
                                <div class="d-flex justify-content-between small text-success">
                                    <span>Total Amount:</span>
                                    <span class="fw-bold">@invoice.TotalAmount.ToString("C")</span>
                                </div>
                            </div>

                            <p class="card-text text-break small" style="max-width: 100%;">
                                <strong>Description:</strong> @invoice.ServiceDescription
                            </p>
                        </div>
                        <div class="card-footer bg-white border-0 pb-3 d-flex gap-2 justify-content-end">

                            @if (isGenerating)
                            {
                                <button class="btn btn-md btn-info" disabled>
                                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                    Generating PDF...
                                </button>
                            }
                            else
                            {
                                <button type="button" class="btn btn-success" @onclick="() => DownloadPdf(invoice)">
                                    Generate PDF
                                </button>
                            }
                            <button class="btn btn-sm btn-info" @onclick="() => EditInvoice(invoice.Id)">
                                Edit
                            </button>
                            <button class="btn btn-sm btn-danger" @onclick="() => DeleteInvoice(invoice.Id)">
                                Delete
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>


@code {
    List<Invoice>? invoices = null;
    private bool isGenerating = false;

    protected override async Task OnInitializedAsync()
    {
        invoices = await InvoiceService.GetAllInvoices();
    }

    private void EditInvoice(int id)
    {
        Nav.NavigateTo($"/Invoices/Edit/{id}");
    }

    private async Task DeleteInvoice(int invoiceId)
    {  
        await InvoiceService.DeleteInvoice(invoiceId);
        Nav.Refresh(forceReload: true);
    }

    private async Task DownloadPdf(Invoice invoice)
    {
        isGenerating = true;

        try
        {
            byte[] pdfBytes = await InvoiceService.GenerateInvoicePdfAsync(invoice.Id);
            using var stream = new MemoryStream(pdfBytes);
            using var streamRef = new DotNetStreamReference(stream);

            await JS.InvokeVoidAsync("openPdfInNewTab", streamRef);
        }
        finally
        {
            isGenerating = false;
        }

    }
}